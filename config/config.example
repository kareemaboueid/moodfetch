# Moodfetch configuration file
# Copy this to ~/.config/moodfetch/config or /etc/moodfetch/config

# Debug and logging options
debug_enabled=false         # Enable debug logging (can be overridden with --debug)
color_logging=true         # Use colors in log output (auto-disabled in non-TTY)

# Linux system paths
procfs_path="/proc"        # Path to procfs mount
sysfs_path="/sys"         # Path to sysfs mount

# Display options
show_ascii=true             # Show ASCII art logo
compact_ascii=false         # Use compact ASCII art
verbose=false              # Show detailed metrics
hide_metrics=true          # Hide raw numbers in mood text
color_enabled=true         # Use colors in output

# Performance settings
weather_timeout=1.5        # Weather API timeout in seconds

# Warning thresholds
battery_critical=15        # Battery critical threshold (%)
battery_low=30            # Battery low threshold (%)
cpu_hot=80               # CPU temperature warning (°C)
cpu_high_load=75         # CPU utilization warning (%)
ram_high=85              # RAM usage warning (%)
disk_high=90             # Disk usage warning (%)

# New hardware thresholds
gpu_hot=75              # GPU temperature warning (°C)
gpu_high_load=85        # GPU utilization warning (%)
gpu_mem_high=90         # GPU memory usage warning (%)
net_high=50             # Network bandwidth warning (MB/s)
proc_high=500           # Process count warning threshold
disk_io_high=100        # Disk I/O warning (MB/s)

# No theme settings needed - using classic sarcastic personality